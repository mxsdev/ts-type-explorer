{
    "compilerOptions": {
        "target": "es2017",
        "module": "CommonJS",
        "moduleResolution": "node",
        "strict": true,
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "declaration": true,
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./dist"
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src"]
}
